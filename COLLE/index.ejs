<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <title>OpenAI Chat Interface</title>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .typewriter {
      border-right: 2px solid;
      white-space: nowrap;
      overflow: hidden;
      margin: 0 auto;
      letter-spacing: 2px; 
      animation: typing 10s steps(30, end), blink-caret .75s step-end infinite;
    }
    
    @keyframes typing {
      from { width: 0 }
      to { width: 100%; }
    }
    
    @keyframes blink-caret {
      from, to { border-color: transparent }
      50% { border-color: black; }
    }
    body { margin: 0; font-family: Arial, sans-serif; background-color: #f5f4f7; }
    .navbar { background-color: #007bff; }
    .navbar-brand { color: #fff; }
    .navbar-brand:hover { color: #fff; }
    .container { max-width: 700px; margin-top: 20px; }
    .form-control { border-radius: 0; }
    .btn-primary { border-radius: 0; }
    .response-container { background-color: #fff; border: 1px solid #ddd; padding: 15px; margin-top: 20px; }
    .footer { background-color: #007bff; color: #fff; padding: 10px 0; text-align: center; position: fixed; bottom: 0; width: 100%; }
  </style>
</head>
<body>
  <nav class="navbar">
    <a class="navbar-brand" href="#"></a>
  </nav>

  <div class="container">
    <div class="gif-container text-center">
      <img src="https://upload.wikimedia.org/wikipedia/commons/c/cb/WhatsApp-BOT-Image-2_2.gif" style="max-width: 50%; height: auto; margin-top: 20px;">
    </div>
    <h2 class="text-center mb-4">FAQ with Arnold</h2>

    
     
      <script>
        const typewriterText = "Hi im Arnold im the awnser for your questions.";
        let i = 0;
        const speed = 20; 
    
        function typeWriter() {
          if (i < typewriterText.length) {
            document.getElementById("typewriter-text").innerHTML += typewriterText.charAt(i);
            i++;
            setTimeout(typeWriter, speed);
          }
        }
    
        window.onload = typeWriter;
      </script>
      
    </h2>
    <form action="/ask" method="post">
      <div class="form-group">
        <textarea name="userMessage" class="form-control" rows="4" placeholder="Ask me a question..."></textarea>
      </div>
      <button type="submit" class="btn btn-primary btn-block">Send</button>
    </form>

    <% if (typeof response !== 'undefined') { %>
      <div class="response-container">
        <h5>Antwort:</h5>
        <p><%= response %></p>
      </div>
    <% } %>
  
  <div class="text-center mb-4" id="typewriter-text" class="typewriter"></div>
</div>
  <div class="footer">
    <p>&copy; 2023 BÃ©la Wachsmuth. All rights reserved.</p>
  </div>
  

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>